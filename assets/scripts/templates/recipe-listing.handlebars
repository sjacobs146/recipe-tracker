{{#each recipes as |recipe|}}

 <!-- Developers, why are we using data-id and not just id? -->
  <ul data-id="{{recipe.id}}">
    <li><h1><small>{{recipe.name}}</small></h1></li>
    <li>Serves: {{recipe.serves}}</li>
    <li>Category: {{recipe.category}}</li>
    <li>Ingredients: {{recipe.ingredients}}</li>
    <li>Directions: {{recipe.directions}}</li>
    <li><button class="btn btn-default deleteRecipeButton">Delete Recipe</button></li>
  </ul>

{{/each}}
